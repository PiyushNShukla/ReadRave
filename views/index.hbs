        </div>
        <div class="heading">
            <h1>Choose from many categories...</h1>
        </div>
   </div>
    <section class="new-arrival">
        <h1>New Arrivals</h1>
        <img id="thumbnail-image-new" src="" alt="Most Recent Book Thumbnail">
            <ul id="book-list"></ul>
    </section>
