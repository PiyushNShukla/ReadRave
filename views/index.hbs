    <section id="home">
        <div class="lead-text">Best books every reader should add to their collection</div>
        <h1 class="h-primary">BOOKS FROM<br>THE BEST WRITERS</h1>
        <form action="/search"class="w-form">
        <input type="search" class="form-input" maxlength="256" name="q" placeholder="Search by title, author..." id="search" required>
        <input type="submit" value="Search" class="button w-button">
        </form>
    </section>
   <div class="grid-categories">
