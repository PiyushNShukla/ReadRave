<body>
    <nav id="navbar">
        <div id="logo">
          <a href="/"><img src="images/logo_final.png" alt="ReadRave" ></a>
        </div>
       <ul>
        <li class="items"><a href="#">HOME</a></li>
        <li class="items"><a href="#">CATEGORIES</a></li>
        <li class="items"><a href="#">ABOUT US</a></li>
        <li class="items"><a href="#">CONTACT</a></li>
       </ul>
